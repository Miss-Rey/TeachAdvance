model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}

model Course {
  id                  String    @id @default(cuid())
  title               String    @default("")
  description         String    @default("")
  author              String    @default("")
  language            String    @default("")
  duration            String    @default("")
  thumbnail_id        String?
  thumbnail_filesize  Int?
  thumbnail_width     Int?
  thumbnail_height    Int?
  thumbnail_extension String?
  chapter             Chapter[] @relation("Chapter_course")
  objectives          String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  audience            String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}

model Chapter {
  id         String      @id @default(cuid())
  title      String      @default("")
  submodules Submodule[] @relation("Submodule_chapter")
  course     Course?     @relation("Chapter_course", fields: [courseId], references: [id])
  courseId   String?     @map("course")

  @@index([courseId])
}

model Submodule {
  id        String   @id @default(cuid())
  title     String   @default("")
  chapter   Chapter? @relation("Submodule_chapter", fields: [chapterId], references: [id])
  chapterId String?  @map("chapter")
  notes     Note[]   @relation("Note_submodule")

  @@index([chapterId])
}

model Note {
  id          String     @id @default(cuid())
  content     String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  submodule   Submodule? @relation("Note_submodule", fields: [submoduleId], references: [id])
  submoduleId String?    @map("submodule")

  @@index([submoduleId])
}
